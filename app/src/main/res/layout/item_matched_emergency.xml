<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emergencyCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Match Score Banner at Top -->
        <androidx.cardview.widget.CardView
            android:id="@+id/matchScoreCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            android:backgroundTint="#D1FAE5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_check"
                    app:tint="#047857"
                    android:contentDescription="Match Icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Excellent Match for Your Skills"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#047857" />

                <TextView
                    android:id="@+id/matchScoreTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="95%"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#047857" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header: Type Icon + Title + Urgency Badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Type Icon -->
                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FEE2E2">

                    <ImageView
                        android:id="@+id/typeIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_emergency"
                        app:tint="#DC2626"
                        android:contentDescription="Emergency Type Icon" />
                </androidx.cardview.widget.CardView>

                <!-- Emergency Type Title -->
                <TextView
                    android:id="@+id/emergencyTypeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Medical Emergency"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1f2937" />

                <!-- Urgency Badge -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FEE2E2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">

                        <ImageView
                            android:id="@+id/urgencyIcon"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_emergency"
                            app:tint="#DC2626"
                            android:contentDescription="Urgency Icon" />

                        <TextView
                            android:id="@+id/urgencyBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="High"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#DC2626" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/location"
                    app:tint="#6b7280"
                    android:contentDescription="Location Icon" />

                <TextView
                    android:id="@+id/emergencyLocationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Downtown District"
                    android:textSize="14sp"
                    android:textColor="#6b7280" />
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/emergencyDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Description of the emergency situation that needs immediate attention from volunteers"
                android:textSize="14sp"
                android:textColor="#4b5563"
                android:lineSpacingExtra="2dp"
                android:maxLines="3"
                android:ellipsize="end" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                android:background="#E5E7EB" />

            <!-- Match Reason -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#F3F4F6"
                android:padding="12dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_heart"
                    app:tint="#4338ca"
                    android:contentDescription="Match Icon" />

                <TextView
                    android:id="@+id/matchReasonTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Your medical training and nearby location make you an ideal match"
                    android:textSize="13sp"
                    android:textColor="#4338ca"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>